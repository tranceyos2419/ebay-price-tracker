generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  FAILED
  SUCCESS
}

model Item {
  item_id     Int     @id @default(autoincrement())
  key_page_id Int
  KeyPage     KeyPage @relation(fields: [key_page_id], references: [key_page_id], onDelete: Cascade)
}

model KeyPage {
  key_page_id        Int            @id @default(autoincrement())
  ebay_item_id       String         @unique
  price              Float
  minimum_best_offer Float
  image_url          String
  title              String
  status             Status
  message            String
  last_updated_date  DateTime
  items              Item[]
  TrackingPage       TrackingPage[]
}

model TrackingPage {
  tracking_page_id  Int      @id @default(autoincrement())
  ebay_item_id      String   @unique
  price             Float
  image_url         String
  store_name        String
  status            Status
  message           String
  last_updated_date DateTime
  key_page_id       Int
  KeyPage           KeyPage  @relation(fields: [key_page_id], references: [key_page_id], onDelete: Cascade)
}

model UserToken {
  id            Int      @id @default(autoincrement())
  refresh_token String   @unique
  expires_at    DateTime
  created_at    DateTime @default(now())
}
